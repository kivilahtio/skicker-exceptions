{
  "compilerOptions": {
    "newLine": "lf",
    "charset": "utf8",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "baseUrl": "./",
    "moduleResolution": "Node",
    "alwaysStrict":  true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "*.d.ts"
  ]
}

